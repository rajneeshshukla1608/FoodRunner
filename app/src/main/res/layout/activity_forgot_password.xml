<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword"
    android:background="#FF4848">

  <ImageView
      android:id="@+id/image_forgot"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:layout_marginLeft="100dp"
      android:src="@drawable/splash_logo" />

  <TextView
      android:id="@+id/forgot_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/image_forgot"
      android:layout_marginTop="2dp"
      android:layout_marginLeft="10dp"
      android:text="@string/forgot_text"
      android:textColor="#ffffff"
      android:textSize="20dp" />

  <EditText
      android:id="@+id/edit_Email"
      android:drawableLeft="@drawable/ic_mobile_name"
      android:layout_width="385dp"
      android:layout_height="50dp"
      android:drawablePadding="5dp"
      android:layout_below="@+id/forgot_text"
      android:layout_centerInParent="true"
      android:layout_marginTop="45dp"
      android:background="#ffffff"
      android:hint="Mobile Number (10 digits)" />

  <EditText
      android:id="@+id/edit_Number"
      android:layout_width="385dp"
      android:layout_height="50dp"
      android:drawablePadding="5dp"
      android:drawableLeft="@drawable/ic_email_name"
      android:layout_below="@+id/edit_Email"
      android:layout_centerInParent="true"
      android:layout_marginTop="20dp"
      android:background="#ffffff"
      android:hint="Email Address" />

  <Button
      android:id="@+id/forgot_btn"
      android:layout_width="385dp"
      android:layout_height="60dp"
      android:layout_below="@+id/edit_Number"
      android:layout_centerInParent="true"
      android:layout_marginTop="15dp"
      android:text="Next"
      android:textColor="#ffffff"
      android:textSize="20dp"
      android:textStyle="bold"
      app:backgroundTint="#E32424" />


</RelativeLayout>